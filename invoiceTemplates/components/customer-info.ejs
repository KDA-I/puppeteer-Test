    <div class="word-wrap">
      Bill to:
      <strong
        ><%= customerUser.firstName %> <%= customerUser.lastName %></strong
      >
    </div>
    <div>Phone: <strong><%= customerUser.phoneNumber %></strong></div>
  </div>
  <% if(pet) { %>
    <div>
  <div>
    <div class="word-wrap">
      Pet name:
      <strong><%= pet?.petName %> </strong>
