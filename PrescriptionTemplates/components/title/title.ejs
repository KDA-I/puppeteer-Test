

<style>
    
    .title-container {
        padding:10px 0px;  
        display: flex;
        flex-direction: column;
        gap: 8px;
    }
    .title {
        font-size: 16px;
        font-weight: 700;
        color: #283845;
    }
    .notes {
        font-size: 12px;
        color: #283845;
    }
    .notes span {
        font-weight: 500;
        color: #666666;
    }
</style>


<div class="title-container">
    <% if(title)    { %>
    <div class="title"><%= title %></div>
    <% } %>

    <% if(notes)    { %>
    <div class="notes"> <span>Medical Note: </span><%= notes %></div>
    <% } %>
</div>