<div
  style="
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-top: 10px;
    padding: 10px;
  "
>
  <% if (description) { %>
  <div class="descriptionContainer"><%= description %></div>
  <% } %> <% if (complaintEntries) { %>
  <div style="border-collapse: collapse; width: 80%">
    <div style="display: flex; padding: 5px; color: grey; font-size: 14px">
      <div style="flex: 1; padding: 6px 6px 6px 6px; margin: 0px 5px 0px 0px">
        Symptom
      </div>
      <div
        style="
          flex: 1;
          padding: 6px 6px 6px 6px;
          margin: 0px 5px 0px 0px;
          text-align: center;
        "
      >
        Count
      </div>
      <div
        style="
          flex: 1;
          padding: 6px 6px 6px 6px;
          margin: 0px 5px 0px 10px;
          text-align: center;
        "
      >
        Date
      </div>
    </div>
    <% complaintEntries.forEach((entry,index) => { %>
    <div style="display: flex; font-size: 14px; font-weight: 700">
      <div
        style="
          flex: 1;
          padding: 6px 6px 6px 6px;
          background-color: #ffff;
          margin: 0px 5px 0px 0px;
          border-top-right-radius: <% if (index === 0) { %> 5px <% } %>;
          border-top-left-radius: <% if (index === 0) { %> 5px <% } %>;
          border-bottom-right-radius: <% if (index === complaintEntries.length-1) { %> 5px <% } %>;
          border-bottom-left-radius: <% if (index === complaintEntries.length-1) { %> 5px <% } %>;
        "
      >
        <%= entry.comment %>
      </div>
      <div
        style="
          flex: 1;
          padding: 6px 6px 6px 6px;
          background-color: #ffff;
          margin: 0px 5px 0px 0px; text-align: center;
          border-top-right-radius: <% if (index === 0) { %> 5px <% } %>;
          border-top-left-radius: <% if (index === 0) { %> 5px <% } %>;
          border-bottom-right-radius: <% if (index === complaintEntries.length-1) { %> 5px <% } %>;
          border-bottom-left-radius: <% if (index === complaintEntries.length-1) { %> 5px <% } %>;
        "
      >
        <%= entry.count || "-" %>
      </div>
      <div
        style="
          flex: 1;
          padding: 6px 6px 6px 6px;
          background-color: #ffff;
          margin: 0px 5px 0px 0px;
           text-align: center;
          border-top-right-radius: <% if (index === 0) { %> 8px <% } %>;
          border-top-left-radius: <% if (index === 0) { %> 8px <% } %>;
          border-bottom-right-radius: <% if (index === complaintEntries.length-1) { %> 8px <% } %>;
          border-bottom-left-radius: <% if (index === complaintEntries.length-1) { %> 8px <% } %>;
        "
      >
        <% if(entry.date){ %> <%= new Date(entry.followUpDate).toLocaleDateString() %> <% } else { %> - <% }
        %>
      </div>
    </div>
    <% }) %>
  </div>

  <% } %>
</div>
